{% extends "../layouts/default.html.njk" %}

{% block content %}
  <section class="c-intro c-intro--with-image">
    <div class="l-container">
      <div class="c-intro__wrapper">
        <img src="{{ contents.images['call-for-speakers-intro.jpg'].url }}"
            class="c-intro__image">
        <h1 class="c-intro__title">Call For Speakers</h1>
      </div>
      <p class="c-intro__text copy--max">
        {{ contents.copy.cfs['intro.md'].metadata.introText }}
      </p>
    </div>
  </section>

  <div class="l-container">
    <main>
      <div class="markdown--indented-paragraphs">
        {{ contents.copy.cfs['open-until.md'].html }}
      </div>
      <div class="markdown--indented-paragraphs">
        {{ contents.copy.cfs['topics.md'].html }}
      </div>
      <div class="markdown--indented-paragraphs">
        {{ contents.copy.cfs['we-can-help.md'].html }}
      </div>

      <div class="markdown--indented-paragraphs">
        {{ contents.copy.cfs['perks.md'].html }}
      </div>

      <div class="markdown--indented-paragraphs">
        {{ contents.copy.cfs['selection-process.md'].html }}
      </div>

      <div class="markdown--indented-paragraphs">
        {{ contents.copy.cfs['guidelines.md'].html }}
      </div>

      <div class="markdown--indented-paragraphs">
        {{ contents.copy.cfs['video-recordings.md'].html }}
      </div>

      <div class="markdown--indented-paragraphs">
        {{ contents.copy.cfs['coc.md'].html }}
      </div>
    </main>
  </div>
{% endblock %}
