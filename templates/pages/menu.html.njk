{% extends "../layouts/default.html.njk" %}

{% from "../_macros.njk" import pageIntro %}

{% block content %}
  {% set data = contents.copy.menu['main.md'] %}

  {{
    pageIntro(
      data.metadata.title,
      data.metadata.introText,
      contents.images.intros[data.metadata.introImage].url
    )
  }}

  <div class="l-container">
    <main>
      <div class="c-markdown c-markdown--indented-paragraphs">
        {{ contents.copy.menu['main.md'].html }}
      </div>
    </main>
  </div>
{% endblock %}
