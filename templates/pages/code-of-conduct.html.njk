{% extends "../layouts/default.html.njk" %}

{% from "../_macros.njk" import pageIntroImage %}

{% block bodyClass -%}page--coc{%- endblock %}

{% set data = contents.copy.coc['main.md'] %}

{% block content %}
  {{
    pageIntroImage(
      data.metadata.title,
      data.metadata.introText,
      contents.images.intros[data.metadata.introImage].url
    )
  }}

  <div class="l-container">
    <main>
      <div class="markdown--indented-paragraphs">
        {{ data.html }}
      </div>
    </main>
  </div>
{% endblock %}
